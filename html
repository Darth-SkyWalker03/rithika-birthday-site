  <div class="question">
    <h2>5. Favourite food to eat together?</h2>
    <div class="options">
      <button onclick="lockAnswer(this)">ibaco</button>
      <button onclick="lockAnswer(this)">momos</button>
      <button onclick="lockAnswer(this)">ramen</button>
      <button onclick="lockAnswer(this)">fries</button>
    </div>
  </div>

  <script>
    function lockAnswer(button) {
      const buttons = button.parentElement.querySelectorAll('button');
      buttons.forEach(btn => {
        btn.disabled = true;
        if (btn === button) {
          btn.style.backgroundColor = "#e75480";
          btn.style.color = "white";
        }
      });
    }
  </script>
